AutoScriptWriter - 
  wget http://www.autohotkey.com/download/AutoHotkey.zip
  mkdir -p ~/src/ahk
  mv AutoHotkey.zip ~/src/ahk
  cd ~/src/ahk
  unzip AutoHotkey.zip && chmod -R 755 AutoScriptWriter
